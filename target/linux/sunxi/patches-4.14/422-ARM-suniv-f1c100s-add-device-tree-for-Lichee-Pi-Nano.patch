+++ b/arch/arm/boot/dts/Makefile
@@ -938,7 +938,8 @@ dtb-$(CONFIG_MACH_SUN9I) += \
 	sun9i-a80-optimus.dtb \
 	sun9i-a80-cubieboard4.dtb
