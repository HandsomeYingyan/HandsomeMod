+++ b/arch/arm/boot/dts/suniv.dtsi
@@ -232,6 +232,11 @@
 				function = "uart0";
 			};
 
+			uart1_pins_a: uart-pins-pa {
+				pins = "PA2", "PA3";
+				function = "uart1";
+			};
+
